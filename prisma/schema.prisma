// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String   @unique
  tel       String   @unique
  password  String
  date      DateTime
  city      String
  cep       String
  country   String
  state     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}
